<Window x:Class="RapidSynthesis.Windows.SaveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RapidSynthesis.Windows"
        mc:Ignorable="d"
        Title="Save Profile" Height="83.4" Width="270" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Chose a name for the profile..." HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="265" Margin="0,-4,-1,0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TXBName" HorizontalAlignment="Left" Height="23" Margin="5,0,0,5" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="160" Grid.ColumnSpan="2"/>
        <Button x:Name="BTNConfirm" Content="Save" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="80" Click="BTNConfirm_Click" Height="23" Grid.Column="1"/>

    </Grid>
</Window>
