        <CheckBox x:Name="CHBFood" Content="" HorizontalAlignment="Left" Margin="94,159.4,0,0" VerticalAlignment="Top" Height="15" Width="14" Checked="CHBFood_Checked" Unchecked="CHBFood_Checked" FontFamily="/RapidSynthesis;component/Resources/Fonts/#Sen" Padding="0" Grid.Row="1"/>

        <!-- Syrup -->
        <Label x:Name="LabelSyrup" Content="Syrup" HorizontalAlignment="Left" Margin="10,184.4,0,0" VerticalAlignment="Top" Height="25" Width="75" FontFamily="/RapidSynthesis;component/Resources/Fonts/#Sen" Padding="0" VerticalContentAlignment="Center" FontSize="18" Grid.Row="1"/>
